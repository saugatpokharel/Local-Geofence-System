<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Geofence Detail Activity -->
        <activity
            android:name=".ui.GeofenceDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.SensorActivity"
            android:exported="false" />

        <activity android:name=".ui.GeofenceAlertActivity"
            android:exported="false"
            android:theme="@style/Theme.GeoFenceApplication.GeofenceDialog" />

        <!-- Broadcast Receiver for geofence events -->
        <receiver
            android:name=".geo.GeofenceBroadcastReceiver"
            android:exported="false">

        </receiver>

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCHyW06hRbsYExuCRAwoBcj6WbuEc5tOJQ" />

    </application>

</manifest>
